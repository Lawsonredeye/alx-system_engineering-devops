#!/usr/bin/env bash
# installs and sets NGINX to listen at port 80
sudo apt-get update -y
# Install engineX
sudo apt-get install nginx -y
# set NGINX to the port 80
sudo ufw allow "Nginx HTTP"
# let NGINX listen on port 80
sed -i 's/8080/80/g' /etc/nginx/sites-enabled/default
# start nginx
sudo service nginx start
# sudo echo "Hello, World!" >  /var/www/html/index.html
echo "<!DOCTYPE html><html><head><title>Hello World!</title></head><body><h1>Hello World!</h1></body></html>" | sudo tee /var/www/html/index.html